<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Realtime Pizza App</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp,container-queries"></script>
    <link rel="stylesheet" href="/css/app.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@300;0,400;0,700;0,&display=swap" rel="stylesheet">
</head>
<body> 
    

    <section class="hero py-16">
        <div class="container mx-auto flex items-center justify-between">
            <div class="px-4 w-1/2">
                <h6 class="text-lg"><em>Are you hungry?</em></h6>
                <h1 class="text-6xl font-bold mt-4">Don't Wait !!</h1>
                <button class="btn-primary rounded-full px-6 font-bold py-2 text-white font-bold mt-4">Order Now</button>
            </div>
            <div class="w-1/2">
                <img src="/images/hero-pizza.png" alt="">
            </div>
        </div>
    </section>
    
    <section class="menu container mx-auto py-8">
        <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
        <div class="grid grid-cols-4 col-gap-16 row-gap-16 ">
    
              <% pizzas.forEach(function(pizza){ %>
                <div class="w-64 mt-8">
                    <img class="h-40 mb-4 mx-auto" src="/images/<%=pizza.image%>" alt="">
                    <div class="text-center">
                        <h2 class="mb-4 text-lg"><%= pizza.name%></h2>
                        <span class="size py-1 px-4 rounded-full uppercase text-x"><%= pizza.size %></span>
                        <div class="flex items-center justify-around mt-6">
                            <span class="font-bold text-lg">â‚¹<%= pizza.price %></span>
                            <button data-pizza = <%= JSON.stringify(pizza) %> class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                                <span>+</span>
                                <span class="ml-4">Add</span>
                            </button>
                        </div>
                    </div>
                </div>  
                         
           <% })%>
           
          
           

            
        </div>
    </section>
    <script src="/js/app.js"></script>
</body>
</html>
